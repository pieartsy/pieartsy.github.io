        <div id="art">
            <!--card with slideshow-->
            <h2>Art</h2>      
            <div class="card flex-centered columns col-10 col-mx-auto contain">
                <img class="mySlides img-responsive" id="strive">
                <img class="mySlides img-responsive" id="hangedman">
                <img class="mySlides img-responsive" id="roses">
                <img class="mySlides img-responsive" id="flirt">
                <img class="mySlides img-responsive" id="sorrel">
                <!--buttons for slides-->
                <button class="btn btn-link prev" onclick="plusDivs(-1)">&#10094;</button>
                <button class="btn btn-link next" onclick="plusDivs(1)">&#10095;</button>
            </div>
            <!--script for slideshow-->
            <script>
                var slideIndex = 1;
                showDivs(slideIndex);

                function plusDivs(n) {
                    showDivs(slideIndex += n);
                }

                function showDivs(n) {
                    var i;
                    var x = document.getElementsByClassName("mySlides");
                    if (n > x.length) {slideIndex = 1}
                    if (n < 1) {slideIndex = x.length}
                    for (i = 0; i < x.length; i++) {
                        x[i].style.display = "none";  
                    }
                    x[slideIndex-1].style.display = "block";  
                }
            </script>             
        </div>

